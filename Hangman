import random

def get_random_word():
    word_bank = ["horse", "python", "hangman", "programming", "computer", "developer", "algorithm", "debugging", "function", "variable"]
    return random.choice(word_bank)

def display_word(word, guessed_letters):
    return " ".join([letter if letter in guessed_letters else "_" for letter in word])

def play_game():
    print("Let's play hangman!")
    
    word = get_random_word()
    guessed_letters = []
    lives = 6

    while True:
        print(f"Lives left: {lives}")
        print(display_word(word, guessed_letters))
        guess = input("Guess a letter: ").lower()

        if len(guess) != 1 or not guess.isalpha():
            print("Not a valid guess. Please enter a single letter.")
            continue

        if guess in guessed_letters:
            print(f"You've already guessed '{guess}'.")
            continue

        guessed_letters.append(guess)

        if guess in word:
            print(f"Good guess! '{guess}' is in the word.")
        else:
            lives -= 1
            print(f"Letter not found! '{guess}' is not in the word.")
        
        if all(letter in guessed_letters for letter in word):
            print(f"Word guessed, you've won! The word was '{word}'.")
            break

        if lives == 0:
            print(f"Out of lives, game over! The word was '{word}'.")
            break

    play_again = input("Play again? (yes/no): ").lower()

    if play_again == "yes":
        play_game()
    elif play_again == "no":
        print("Thanks for playing!")
    else:
        print("Invalid input. Play again? (yes/no)")
        play_again = input().lower()
        if play_again == "yes":
            play_game()
        elif play_again == "no":
            print("Thanks for playing!")

if __name__ == "__main__":
    play_game()
